{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2020", "esnext.asynciterable"],
    "sourceMap": true,
    "outDir": "./build",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "build",
    "commitlint.config.js",
    "src/fixtures/**/*",
    "jest.config.ts",
    "babel.config.js",
    "coverage",
    "src/**/*.test.ts",
    "__snapshots__",
    "jest.setup.ts"
  ],
  "include": ["src/**/*.ts"],
  "files": ["global.d.ts"]
}
