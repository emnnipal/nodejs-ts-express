{
  "name": "nodejs-ts-express",
  "version": "0.11.3",
  "description": "Boilerplate for node js with typescript",
  "private": true,
  "main": "index.js",
  "keywords": [
    "node",
    "api",
    "express"
  ],
  "author": "Emmanuel Nipal <emnnipal@gmail.com>",
  "license": "ISC",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "eslint --fix --ext .ts ./src",
    "format": "npx prettier --write .",
    "check:types": "tsc --noEmit -p tsconfig.eslint.json",
    "build": "rm -rf ./build && etsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "pm2:start": "pm2 start npm --name 'sample-app-name' -- run start",
    "pm2:cluster:start": "pm2 start -i 0 npm --name 'sample-app-name' -- run start",
    "deploy": "npm run build && npm run pm2:start",
    "docker:build": "docker build -t template/nodejs-ts-express .",
    "docker:run": "docker run --name nodejs-ts-express -p 3000:8080 -d template/nodejs-ts-express",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@emarketeer/esbuild-plugin-tsc": "^0.4.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/lodash": "^4.14.194",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vitest/coverage-c8": "^0.30.1",
    "@vitest/ui": "^0.30.1",
    "concurrently": "^8.0.1",
    "cpy": "^9.0.1",
    "cross-env": "^7.0.3",
    "cspell": "^6.31.1",
    "esbuild": "^0.17.16",
    "esbuild-node-tsc": "^2.0.5",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "dependencies": {
    "axios": "^1.3.5",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.1.5",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "winston": "^3.8.2",
    "zod": "^3.21.4"
  }
}